            = image_tag("cabin.png", class: "img img-responsive")
        .col-sm-4.portfolio-item
          %a.portfolio-link{"data-toggle" => "modal", :href => "#portfolioModal2"}
            .caption
              .caption-content
                %i.fa.fa-search-plus.fa-3x
            = image_tag("cake.png", class: "img img-responsive")
